@model MovieIndexAdvancedVM

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/img/ter.png" style="width:1100px; height:300px;" />
            <div class="carousel-caption">
            </div>
        </div>

        <div class="item">
            <img src="~/img/click.jpeg" Image Maybe" alt="Image" style="width:1200px; height:300px;" />
            <div class="carousel-caption">
            </div>
        </div>

        <div class="item">
            <img src="~/img/notebook.jpg" Image Maybe" alt="Image" style="width:1200px; height:300px;" />
            <div class="carousel-caption">
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container ">
    <h3></h3><br>
    <div class="row">
        <div class="col-sm-6">
            <div class="container">
                @*<h4>Top five movies <span class="glyphicon glyphicon-king"></span></h4>*@
                <table class="table table-striped" width="300">
                    <thead style="background-color:black;color:gold;">
                        <tr>
                            <th>Top five movies</th>
                            <th><span class="glyphicon glyphicon-king"></span></th>
                        </tr>
                    </thead>
                    <tr>
                        <th><i>Movie</i></th>
                        <th><i>Rate</i></th>
                    </tr>
                    @foreach (var movie in Model.TopRatedMoviesViewModels)
                    {
                        <tr onclick="document.location = '/movies/info/@movie.Id';">
                            <td><a href="/movies/info/@movie.Id">@movie.Title</td>
                            <td>@movie.Rate</td>
                        </tr>

                    }
                </table>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="container">
                <table class="table table-striped" width="300">
                    <thead style="background-color:black;color:gold;">
                        <tr>
                            <th>Recently added movies</th>
                            <th><span class="glyphicon glyphicon-time"></span></th>
                        </tr>
                    </thead>
                    <tr>
                        <th><strong><i>Movie</i></strong></th>
                        <th><i>Genre</i></th>

                    </tr>
                    @foreach (var movie in Model.RecentlyAddedMoviesViewModels)
                    {
                        <tr>
                            <td><a href="/movies/info/@movie.Id">@movie.Title</td>
                            <td>@movie.Genre</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>












