@model MovieEditVM
@{
    ViewBag.Title = "Edit";
}


<div class="container">
    <h2>Edit <i>@Model.Title</i></h2>
    <form asp-controller="Movies" asp-action="Edit">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input style="width: 200px;" class="form-control" asp-for="Title" placeholder="Title" />
            <span style="color:red;" asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="About"></label>
            <textarea style="width: 200px;" class="form-control" asp-for="About" placeholder="About"></textarea>
            <span style="color:red;" asp-validation-for="About"></span>
        </div>

        <div class="form-group">
            <label asp-for="Length"></label>
            <input style="width: 200px;" class="form-control" asp-for="Length" placeholder="Length" />
            <span style="color:red;" asp-validation-for="Length"></span>

        </div>
        <div class="form-group">
            <label asp-for="Genre"></label>
            <select style="width: 200px;" class="form-control" id="Genre" name="Genre">
                <option value=""> - Please select a genre - </option>
                <option value="Action"> Action </option>
                <option value="Comedy"> Comedy </option>
                <option value="Drama"> Drama</option>
            </select>
            <span style="color:red;" asp-validation-for="Genre"></span>
        </div>

        <div class="form-group">
            <label asp-for="Trailer"></label>
            <input style="width: 200px;" class="form-control" asp-for="Trailer" />
        </div>

        <input type="submit" class="btn btn-default" value="Confirm changes" />
    </form>
</div>

@section scripts
{
    <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.1.0.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}